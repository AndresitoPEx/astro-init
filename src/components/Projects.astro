---
import NextJS from '../icons/NextJS.astro';
import Tailwind from '../icons/Tailwind.astro';

const TAGS = {
  NEXT: {
    name: 'Next JS',
    color: 'bg-gray-500',
    icon: NextJS,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    color: 'bg-gray-500',
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: 'Fly Alone - Landing',
    description: 'This is a project',
    image: '/projects/exp11.webp',
    link: 'https://app-fly.vercel.app/',
    github: 'https://github.com/AndresitoPEx/app-fly',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: 'Delta Store - Ecommerce',
    description: 'This is a project',
    image: '/projects/exp10.webp',
    link: 'https://www.deltatacticalshop.com/',
    github: 'https://github.com/AndresitoPEx/deltavite',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  }
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article class="
        flex flex-col gap-y-4
        bg-white/5
        rounded
        p-4
        my-10
        shadow-2xl
        shadow-white/10
        backdrop-filter backdrop-blur-sm
        transition
        hover:shadow-white/20
        hover:bg-white/20
        hover:backdrop-blur-md
        hover:backdrop-filter
        hover:backdrop-contrast-100
        hover:backdrop-grayscale-0
        hover:backdrop-hue-rotate-0
        hover:backdrop-invert-0
        hover:backdrop-opacity-100
        hover:backdrop-saturate-100
        hover:backdrop-sepia-0
        hover:backdrop-drop-shadow-sm
    ">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-sm ${tag.color} py-1 px-2`}
            >
              <tag.icon class="size-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img class="rounded shadow-2xl shadow-white/10" src={image} alt={title} />
    </article>
  ))
}
