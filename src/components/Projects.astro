---
import NextJS from '../icons/NextJS.astro';
import Tailwind from '../icons/Tailwind.astro';

const TAGS = {
  NEXT: {
    name: 'Next JS',
    color: 'bg-gray-500',
    icon: NextJS,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    color: 'bg-gray-500',
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: 'Fly Alone - App',
    description: 'This is a project',
    image: '/projects/exp11.webp',
    link: 'https://app-fly.vercel.app/',
    github: 'https://github.com/AndresitoPEx/app-fly',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-sm ${tag.color} py-1 px-2`}
            >
              <tag.icon class="size-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img class="rounded shadow-2xl shadow-white/10" src={image} alt={title} />
    </article>
  ))
}
